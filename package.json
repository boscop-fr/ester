{
  "name": "@vtech/ester",
  "version": "1.0.0",
  "description": "Ester, le reset CSS",
  "publishConfig": {
    "registry": "https://npm-registry.vtech.fr"
  },
  "main": "reset.scss",
  "repository": {
    "type": "git",
    "url": "ssh://git@git.vtech.fr:888/hyperspace/ester.git"
  },
  "keywords": [
    "reset",
    "css"
  ],
  "author": "Emmanuel Charbonnier",
  "engines": {
    "node": ">=6.15.1"
  },
  "scripts": {
    "test": "git status | grep 'working directory clean' >/dev/null || (echo 'Please commit all changes generated by building'; exit 1)",
    "scss": "node-sass --watch scss --output css",
    "scss-test": "node-sass --watch test/scss --output test/css",
    "start": "parallelshell \"npm run scss\" \"npm run scss-test\"",
    "build": "node-sass scss --output css",
    "build-test": "node-sass test/scss --output test/css"
  },
  "devDependencies": {
    "node-sass": "^4.13.1",
    "parallelshell": "^3.0.2"
  }
}
